pipeline {
    agent {
        node {
            label 'maven'
        }
    }
    tools {
        jdk 'JDK 17'
    }
environment {
    PATH = "/opt/apache-maven-3.9.6/bin:$PATH"
    
}
   stages {
        stage("build"){
            steps {
                 echo "----------- build started ----------"
                sh 'mvn package'
                 echo "----------- build complted ----------"
            }
        }
        stage("test"){
            steps{
                echo "----------- unit test started ----------"
                sh 'mvn surefire-report:report'
                 echo "----------- unit test Complted ----------"
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarCloud') {  // 'SonarCloud' is the name you gave in Jenkins configuration
                    sh 'mvn clean verify sonar:sonar -Dsonar.login=$SONAR_TOKEN'
                }
            }
        }
}
}
